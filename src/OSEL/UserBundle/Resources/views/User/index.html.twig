{# src/Osel/UserBundle/Resources/views/User/index.html.twig #}

{% extends "OSELCoreBundle::layout.html.twig" %}

{% block title %}
    Liste des membres
{% endblock %}

{% block head %}
	<script src="{{ asset('bundles/user/js/actif.js') }}"></script>
	<script src="{{ asset('js/delete.js') }}"></script>
{% endblock %}

{% block body %}
	<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">

				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					<h4 class="modal-title" id="myModalLabel">Confirm Delete</h4>
				</div>

				<div class="modal-body">
					<p>Vous êtes sur le point de supprimer un membre.</p>
					<p>Etes-vous sur de vouloir supprimer ce membre?</p>
					<p class="debug-url"></p>
				</div>

				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
					<a class="btn btn-danger btn-ok">Delete</a>
				</div>
			</div>
		</div>
	</div>
	<div class="modal fade" id="confirm-send" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">

				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					<h4 class="modal-title" id="myModalLabel">Nouveau mail</h4>
				</div>

				<div class="modal-body">
					<p>Vous êtes sur le point d'envoyer un nouveau mail d'inscription.</p>
					<p>Etes vous sur de l'envoyer?</p>
					<p class="debug-url"></p>
				</div>

				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
					<a class="btn btn-info btn-ok">Envoyer</a>
				</div>
			</div>
		</div>
	</div>
			<div class="row">
				<div class="col-md-10 col-md-offset-1">
					<div class="panel panel-default">
						<div class="panel-heading">
							<h3 class="panel-title">Liste des membres</h3></div>
						<div class="panel-body">
                            {% if is_granted('ROLE_SECRETAIRE') %}
							<div class="row">
								<div class="col-md-3 col-sm-3">
									<div class="btn-group" role="group" style="min-width:180px;">
										<button class="btn btn-info btn-xs" type="button" style="width:90px;" onclick="window.open('{{ path('osel_user_csv_options') }}')">Export CSV</button>
										<button class="btn btn-info btn-xs" type="button" style="width:110px;" onclick="window.open('{{ path('osel_user_export_contact') }}')">Export Contacts</button>
									</div>
								</div>


								<div class="col-md-3 col-sm-3">
									<select class="input-sm selectMembres" style="width:180px;min-width:180px;height:22px;padding-top:0px;padding-bottom:0px;">
-												<option value="{{ path('osel_user_index') }}" {% if not active %}selected=""{% endif %}>Tous le membres</option>
											<option value="{{ path('osel_user_index', {'page': page , 'criteria': criteria, 'desc': desc, active: '1', }) }}" {% if active %}selected=""{% endif %}>Membres Actifs</option>
									</select>
								</div>

								<div class="col-md-3 col-sm-3">
									<select class="input-sm selectMembres" style="width:180px;min-width:180px;height:22px;padding-top:0px;padding-bottom:0px;">
										<option value="{{ path('osel_user_index') }}" {% if nbPerPage == 20 %}selected=""{% endif %}>Afficher 20</option>
										<option value="{{ path('osel_user_index', {'page': page , 'criteria': criteria, 'desc': desc, 'active': active, 'nbPerPage': 30}) }}" {% if nbPerPage == 30 %}selected=""{% endif %}>Afficher 30</option>
										<option value="{{ path('osel_user_index', {'page': page , 'criteria': criteria, 'desc': desc, 'active': active, 'nbPerPage': 50}) }}" {% if nbPerPage == 50 %}selected=""{% endif %}>Afficher 50</option>
										<option value="{{ path('osel_user_index', {'page': page , 'criteria': criteria, 'desc': desc, 'active': active, 'nbPerPage': 100}) }}" {% if nbPerPage == 100 %}selected=""{% endif %}>Afficher 100</option>
									</select>
								</div>


							</div>
								</br>
                            {% endif %}
							<div class="row">
								<div class="col-md-12">
									<div class="table-responsive">
										<table class="table table-striped table-condensed">
											<thead style="font-size:12px;">
												<tr>
    												{% if is_granted('ROLE_SECRETAIRE') %}
														<th><a href="{% if criteria == 'enabled' and desc == 0 %}{{ path('osel_user_index', {'page': page , 'criteria': 'enabled', 'desc': '1'}) }}{% else %}{{ path('osel_user_index', {'page': page , 'criteria': 'enabled', 'desc': '0'}) }}{% endif %}">Actif</a></th>
														<th><a href="{% if criteria == 'username' and desc == 0 %}{{ path('osel_user_index', {'page': page , 'criteria': 'username', 'desc': '1'}) }}{% else %}{{ path('osel_user_index', {'page': page , 'criteria': 'username', 'desc': '0'}) }}{% endif %}">Username</a></th>
													{% endif%}
													<th><a href="{% if criteria == 'lastname' and desc == 0 %}{{ path('osel_user_index', {'page': page , 'criteria': 'lastname', 'desc': '1'}) }}{% else %}{{ path('osel_user_index', {'page': page , 'criteria': 'lastname', 'desc': '0'}) }}{% endif %}">Nom</a></th>
													<th><a href="{% if criteria == 'name' and desc == 0 %}{{ path('osel_user_index', {'page': page , 'criteria': 'name', 'desc': '1'}) }}{% else %}{{ path('osel_user_index', {'page': page , 'criteria': 'name', 'desc': '0'}) }}{% endif %}">Prénom</a></th>
													<th><a href="{% if criteria == 'email' and desc == 0 %}{{ path('osel_user_index', {'page': page , 'criteria': 'email', 'desc': '1'}) }}{% else %}{{ path('osel_user_index', {'page': page , 'criteria': 'email', 'desc': '0'}) }}{% endif %}">Adresse Mail</a></th>
													<th class="hidden-xs"><a href="{% if criteria == 'instruments' and desc == 0 %}{{ path('osel_user_index', {'page': page , 'criteria': 'instruments', 'desc': '1'}) }}{% else %}{{ path('osel_user_index', {'page': page , 'criteria': 'instruments', 'desc': '0'}) }}{% endif %}">instrument</a></th>
													<th>GSM/téléphone</th>
													<th class="hidden-xs"><a href="{% if criteria == 'birthday' and desc == 0 %}{{ path('osel_user_index', {'page': page , 'criteria': 'birthday', 'desc': '1'}) }}{% else %}{{ path('osel_user_index', {'page': page , 'criteria': 'birthday', 'desc': '0'}) }}{% endif %}">Date de Naissance</a></th>
													{% if is_granted('ROLE_SECRETAIRE') %}<th><a href="{% if criteria == 'city' and desc == 0 %}{{ path('osel_user_index', {'page': page , 'criteria': 'city', 'desc': '1'}) }}{% else %}{{ path('osel_user_index', {'page': page , 'criteria': 'city', 'desc': '0'}) }}{% endif %}">Adresse </th>
													<th class="hidden-xs">action </th>{% endif %}
												</tr>
											</thead>
											<tbody style="font-size:10px;">
											
												{% for user in listUsers%}
													{% if user.username != 'OSEL' %}
													<a href="{{ path('osel_user_view', {'id': user.id}) }}">
														<tr>
                                                    		{% if is_granted('ROLE_SECRETAIRE') %}
																<td id="user_actif_{{ user.id }}"><a class="user_activate" href="{{ path('user_modify_complete', {'id': user.id}) }}" obj="{{ user.id }}">{% if user.enabled %} <i class="state-icon glyphicon glyphicon-check"></i>{% else %}<i class="state-icon glyphicon glyphicon-unchecked"></i>{% endif %}</a></td>
																<td>{{ user.username }}</td>
                                                            {% endif %}
															<td>{{ user.lastname }}</td>
															<td>{{ user.name }}</td>
															<td>{{ user.email }}</td>
															<td class="hidden-xs">{% for instrument in user.instruments %}{{ instrument.instrument }}{% endfor %}</td>
															<td>{{ user.mobilephone }}</td>
															<td class="hidden-xs">{{ user.birthday|date('d/m/Y') }}</td>
															
															{% if is_granted('ROLE_SECRETAIRE') %}
																{%if user.street != '' and user.number != '' and user.postal != '' and user.city != '' %}
																	<td>{{ user.street }} {{ user.number }}, {{ user.postal }} {{ user.city }} - {{ user.country }}</td>
																{% else %}
																	<td> - </td>
																{% endif %}
																
																<td class="hidden-xs">
																	<div class="btn-group" role="group" style="min-width:136px;">
																		<button class="btn btn-success btn-xs visible-xs-inline visible-sm-inline visible-md-inline visible-lg-inline" type="button" style="height:19px;font-size:10px;" onclick="window.location.href='{{ path('modify', {'id': user.id}) }}'">Modifier</button>
																		<button class="btn btn-warning btn-xs visible-xs-inline visible-sm-inline visible-md-inline visible-lg-inline" type="button" style="height:19px;font-size:10px;" onclick="window.location.href='{{ path('osel_user_view', {'id': user.id}) }}'">Voir</button>
																		<button class="btn btn-info btn-xs visible-xs-inline visible-sm-inline visible-md-inline visible-lg-inline" type="button" style="height:19px;font-size:10px;" data-href="{{ path('send_inscription_mail', {'id': user.id}) }}" data-toggle="modal" data-target="#confirm-send">Reset</button>
																		<button class="btn btn-danger btn-xs visible-xs-inline visible-sm-inline visible-md-inline visible-lg-inline" type="button" style="height:19px;padding-top:0px;padding-bottom:0px;font-size:10px;"  data-href = "{{ path('delete', {'id': user.id}) }}" data-toggle="modal" data-target="#confirm-delete" {% if not is_granted('ROLE_SECRETAIRE') %}Disabled{% endif %}>Supprimer </button>
																	</div>
																</td>
															{% endif %}
															
														</tr>
													</a>
                                                    {% endif %}
													
													{% else %}
														<tr>
															<td colspan="8">Pas encore de Membres!!!</td>
														</tr>

												{% endfor %}
												
											</tbody>
											<tfoot>
												<tr>
													<td colspan="8">
														<nav style="margin-top:-18px;margin-bottom:-24px;">
															<ul class="pagination pagination-sm">
																<li><a aria-label="Previous" href="{{ path('osel_user_index', {'page': page - 1}) }}"><span aria-hidden="true">«</span></a></li>
                                                                {% for p in range(1, nbPages) %}
																	<li{% if p == page %} class="active"{% endif %}>
																		<a href="{{ path('osel_user_index', {'page': p}) }}">{{ p }}</a>
																	</li>
                                                                {% endfor %}
																<li><a aria-label="Next" href="{{ path('osel_user_index', {'page': page + 1}) }}"><span aria-hidden="true">»</span></a></li>
															</ul>

														</nav>
													</td>
												</tr>
											</tfoot>
										</table>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
	


{% endblock %}